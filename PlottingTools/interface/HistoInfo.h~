#ifndef HistoInfo_H
#define HistoInfo_H

#include <iostream>
#include "CommonFilesToInclude.h"

class HistoInfo {
 public :
  HistoInfo(){
    histname.clear();
    XRange.clear();
    YRange.clear();
    legpos.clear();
    XAXISTitle="";
    YAXISTitle="";
    ReBin=1;
  }
  std::vector<std::string> histname;
  std::vector<double> XRange;
  std::vector<double> YRange;
  std::vector<double> legpos;
  std::string XAXISTitle, YAXISTitle;
  std::string plotname;
  int ReBin ;
  ~HistoInfo(){};
  
};
#endif 
